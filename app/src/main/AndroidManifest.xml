<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.webstart.teamup">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/round_button_white_borders"
        android:supportsRtl="true"
        android:theme="@style/Theme.TeamUp"
        tools:targetApi="31">
        <activity
            android:name=".activities.profile.ProfileEditActivity"
            android:exported="false"
            android:theme="@style/Theme.TeamUp.NoActionBar" />
        <activity
            android:name=".activities.teams.TeamCreateActivity"
            android:exported="false"
            android:theme="@style/Theme.TeamUp.NoActionBar" />
        <activity
            android:name=".activities.AnnouncementActivity"
            android:exported="false"
            android:theme="@style/Theme.TeamUp.NoActionBar" />
        <activity
            android:name=".activities.ChatActivity"
            android:exported="false"
            android:theme="@style/Theme.TeamUp.NoActionBar" />
        <activity
            android:name=".activities.teams.TeamActivity"
            android:exported="false"
            android:theme="@style/Theme.TeamUp.NoActionBar" />
        <activity
            android:name=".activities.profile.ProfilActivity"
            android:exported="false"
            android:theme="@style/Theme.TeamUp.NoActionBar" />
        <activity
            android:name=".activities.HomeActivity"
            android:exported="false"
            android:theme="@style/Theme.TeamUp.NoActionBar" />
        <activity
            android:name=".activities.auth.InscriptionActivity"
            android:exported="false"
            android:theme="@style/Theme.TeamUp.NoActionBar" />
        <activity
            android:name=".activities.auth.ReinitialisationActivity"
            android:exported="false"
            android:theme="@style/Theme.TeamUp.NoActionBar" />
        <activity
            android:name=".activities.auth.PwLostActivity"
            android:exported="false"
            android:theme="@style/Theme.TeamUp.NoActionBar" />
        <activity
            android:name=".activities.auth.ConnexionActivity"
            android:exported="true"
            android:theme="@style/Theme.TeamUp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>