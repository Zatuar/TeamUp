<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.teams.TeamCreateActivity"
    android:background="@color/light_purple">

    <LinearLayout
        android:id="@+id/home_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="end"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:background="@color/medium_purple">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_notifications_24"
            android:background="@drawable/round_button_white_borders"
            android:layout_marginRight="14dp"/>

        <ImageButton
            android:id="@+id/home_picture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_face_24"
            android:background="@drawable/round_button_white_borders"
            android:onClick="goToProfile"/>
    </LinearLayout>

    <TextView
        android:id="@+id/d1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/home_header"
        android:text="@string/create_team"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp"/>

    <FrameLayout
        android:id="@+id/fragment_team_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/d1"/>
</androidx.constraintlayout.widget.ConstraintLayout>
