<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inscription1Fragment"
    android:background="@color/light_purple" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:contentDescription="@string/logo_alt"
            android:src="@drawable/logo" />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sora"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/saira_semi_condensed_regular"
            android:text="@string/sign_up"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:layout_gravity="center" />
        <EditText
            android:id="@+id/edit_email"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            android:fontFamily="@font/sora"
            android:inputType="textEmailAddress"
            android:hint="@string/mail_placeholder"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:autofillHints="emailAddress"/>
        <EditText
            android:id="@+id/edit_pw"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:fontFamily="@font/sora"
            android:hint="@string/password_placeholder"
            android:inputType="textPassword"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:autofillHints="password" />
        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:fontFamily="@font/sora"
            android:hint="@string/phone_placeholder"
            android:inputType="phone"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:autofillHints="phone" />
        <Button
            android:id="@+id/next"
            android:layout_width="300dp"
            android:layout_height="44dp"
            android:layout_marginTop="16dp"
            android:text="@string/next"
            android:onClick="goNext"
            android:tag="2"
            android:layout_gravity="center"
            android:backgroundTint="@color/light_orange" />
    </LinearLayout>
</FrameLayout>