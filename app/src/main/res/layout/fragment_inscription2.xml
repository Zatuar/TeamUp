<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.signup.Inscription2Fragment"
    android:background="@color/light_purple" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:contentDescription="@string/logo_alt"
            android:src="@drawable/logo" />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sora"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/sora"
            android:text="@string/profile"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:layout_gravity="center" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profil"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:src="@drawable/circle_camera_icon"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_add_a_photo_24"
            android:layout_marginTop="-30dp"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center"
            android:onClick="selectPictureProfil"/>
        <EditText
            android:id="@+id/edit_name"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            android:fontFamily="@font/sora"
            android:inputType="textEmailAddress"
            android:hint="@string/name_placeholder"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:autofillHints="name"/>
        <EditText
            android:id="@+id/edit_description"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:hint="@string/description_placeholder"
            android:inputType="textMultiLine"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:backgroundTint="@color/white" />
        <Button
            android:id="@+id/next"
            android:layout_width="300dp"
            android:layout_height="44dp"
            android:layout_marginTop="16dp"
            android:text="@string/next"
            android:onClick="goNext"
            android:tag="3"
            android:layout_gravity="center"
            android:backgroundTint="@color/light_orange" />
    </LinearLayout>
</FrameLayout>