<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AnnouncementActivity"
    android:background="@color/light_purple">

    <LinearLayout
        android:id="@+id/home_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="end"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:background="@color/medium_purple">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_notifications_24"
            android:background="@drawable/round_button_white_borders"
            android:layout_marginEnd="14dp"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_face_24"
            android:background="@drawable/round_button_white_borders"
            android:onClick="goToProfile"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/home_header"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/border_rounded_white_bg_purple">

        <TextView
            android:id="@+id/annonce_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:textSize="34dp"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_marginVertical="10dp">
            <ImageView
                android:id="@+id/annonce_team_game_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/rocket_league"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/annonce_team_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Team name"
                android:textSize="25dp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <TextView
            android:id="@+id/annonce_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="content"
            android:textSize="18dp"
            android:textColor="@color/white"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Postuler"
            android:backgroundTint="@color/dark_purple"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_marginVertical="20dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>