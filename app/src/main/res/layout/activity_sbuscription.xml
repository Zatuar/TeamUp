<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.money.SubscriptionActivity"
    android:background="@color/light_purple">
    <TextView
        android:id="@+id/page_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/subscriptions"
        android:textColor="@color/white"
        android:textSize="28dp"
        android:fontFamily="@font/saira_semi_condensed_regular"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_rounded_white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/page_title"
        android:backgroundTint="@color/medium_purple">
        <TextView
            android:id="@+id/subscription_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Premium"
            android:textColor="@color/white"
            android:fontFamily="@font/saira_semi_condensed_regular"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subscription_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accès à toutes les fonctionnalités de l'app pour la modique somme de 9.99€."
            android:maxLines="5"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:maxWidth="165dp"
            android:layout_marginVertical="10dp"/>
        <Button
            android:id="@+id/subscribe_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Details"
            android:backgroundTint="@color/dark_purple"
            android:textColor="@color/light_orange"
            android:textSize="18dp"
            android:onClick="showFullSubscriptionDetails"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/subscriptionFullDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#40000000"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="50dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="hideSubscriptionFullDetails">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_element"
            android:gravity="center"
            android:orientation="vertical"
            android:onClick="showFullSubscriptionDetails">
            <TextView
                android:id="@+id/detail_subscription_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/saira_semi_condensed_regular"
                android:gravity="center"
                android:text="Premium"
                android:textColor="@color/light_orange"
                android:textSize="32dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detail_subscription_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/top_border_light_orange_bg_white"
                android:maxLines="5"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"
                android:text="Accès à toutes les fonctionnalités de l'app pour la modique somme de 9.99€."
                android:textColor="@color/black"
                android:textSize="22dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/medium_purple"
                android:text="9.99€"
                android:textColor="@color/light_orange"
                android:textSize="24dp"
                android:onClick="goToPaymentPage"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>